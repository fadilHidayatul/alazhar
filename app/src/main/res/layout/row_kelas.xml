<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/softblue"
    app:cardCornerRadius="12dp"
    android:layout_margin="@dimen/_12sdp"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="@dimen/_130sdp">

    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/roundImage"
            android:src="@drawable/ic_presentation"
            android:layout_above="@id/kelas"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:id="@+id/kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorKelas1"
            android:fontFamily="@font/quicksand_bold"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_above="@id/jml"
            android:text="Kelas 1 A"/>
        <TextView
            android:id="@+id/jml"
            android:text="Jumlah Murid : "
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/jmlMurid"
            android:text="30"
            android:gravity="center"
            android:layout_toRightOf="@id/jml"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>