<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/matpel"
        android:text="Mata Pelajaran"
        android:textColor="@color/colorKelas2"
        android:fontFamily="@font/quicksand_bold"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/guru"
        android:text="Oleh"
        android:layout_below="@id/matpel"
        android:textColor="@color/colorKelas2"
        android:fontFamily="@font/quicksand_medium"
        android:textSize="18sp"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/jam_akhir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/quicksand_medium"
        android:text="12:00"
        android:textColor="@color/colorKelas2"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/jam_awal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_100sdp"
        android:layout_toStartOf="@id/jam_akhir"
        android:fontFamily="@font/quicksand_medium"
        android:text="08:00"
        android:textColor="@color/colorKelas2"
        android:textSize="18sp" />


    <View
        android:id="@+id/garis"
        android:layout_below="@id/guru"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:layout_height="2dp"/>

</RelativeLayout>