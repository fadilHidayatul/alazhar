<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/testred"
    app:cardCornerRadius="8dp"
    android:layout_marginVertical="6dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/garis1"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="24dp"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:id="@+id/relative1"
            android:gravity="center"
            android:layout_marginVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tanggal"
                android:text="Tanggal : "
                android:textSize="18sp"
                android:textColor="@color/softblack"
                android:fontFamily="@font/quicksand_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tgl"
                android:text="22 "
                android:layout_toRightOf="@id/tanggal"
                android:textSize="18sp"
                android:textColor="@color/softblack"
                android:fontFamily="@font/quicksand_bold"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/bln"
                android:text="Januari"
                android:layout_toRightOf="@id/tgl"
                android:textSize="18sp"
                android:textColor="@color/softblack"
                android:fontFamily="@font/quicksand_bold"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/thn"
                android:text=" 2021"
                android:layout_toRightOf="@id/bln"
                android:textSize="18sp"
                android:textColor="@color/softblack"
                android:fontFamily="@font/quicksand_bold"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:id="@+id/garis2"
            android:layout_below="@id/relative1"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="24dp"
            android:layout_height="2dp"/>

        <RelativeLayout
            android:layout_below="@id/garis2"
            android:layout_marginHorizontal="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtJA"
                android:text="Jam Ajar"
                android:textSize="16sp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/softblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/JAawal"
                android:text="00:00 - "
                android:textSize="16sp"
                android:fontFamily="@font/quicksand_medium"
                android:layout_toStartOf="@id/JAakhir"
                android:textColor="@color/softblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/JAakhir"
                android:text="00:00"
                android:textSize="16sp"
                android:fontFamily="@font/quicksand_medium"
                android:layout_alignParentEnd="true"
                android:textColor="@color/softblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtJM"
                android:text="Jam Masuk"
                android:textSize="16sp"
                android:fontFamily="@font/quicksand_medium"
                android:layout_below="@id/JAakhir"
                android:layout_marginVertical="8dp"
                android:textColor="@color/softblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/JMasuk"
                android:text="00:00"
                android:textSize="16sp"
                android:fontFamily="@font/quicksand_medium"
                android:layout_below="@id/JAakhir"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="8dp"
                android:textColor="@color/softblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtJK"
                android:text="Jam Keluar"
                android:textSize="16sp"
                android:fontFamily="@font/quicksand_medium"
                android:layout_below="@id/JMasuk"
                android:textColor="@color/softblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/JKeluar"
                android:text="00:00"
                android:textSize="16sp"
                android:fontFamily="@font/quicksand_medium"
                android:layout_below="@id/JMasuk"
                android:layout_alignParentEnd="true"
                android:textColor="@color/softblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>